{
  "schema": {
    "types": [
      {
        "name": "Root",
        "description": "Manages the scheduling and notification of events.",
        "actions": [
          {
            "name": "create",
            "type": "Void",
            "params": [
              {
                "name": "text",
                "type": "String"
              },
              {
                "name": "atDate",
                "type": "String",
                "optional": true
              },
              {
                "name": "repeat",
                "type": "Boolean",
                "optional": true
              }
            ],
            "description": "Creates a new event reminder."
          },
          {
            "name": "sendNotifications",
            "type": "Void",
            "params": [
              {
                "name": "id",
                "type": "Int"
              }
            ],
            "description": "Sends notifications for a specific event reminder."
          }
        ],
        "fields": [
          {
            "name": "find",
            "type": "Reminder",
            "params": [
              {
                "name": "id",
                "type": "Int",
                "ofType": "Reminder"
              }
            ],
            "description": "Retrieves a specific reminder by its identifier."
          },
          {
            "name": "reminders",
            "type": "List",
            "ofType": "Reminder",
            "description": "List of all the scheduled reminders."
          },
          {
            "name": "status",
            "type": "String",
            "description": "Current status of the event reminder system."
          }
        ]
      },
      {
        "name": "Reminder",
        "fields": [
          {
            "name": "text",
            "hints": {
              "primary": true
            },
            "type": "String",
            "description": "The content of the reminder."
          },
          {
            "name": "id",
            "type": "Int",
            "description": "Unique identifier for the reminder."
          },
          {
            "name": "repeat",
            "type": "Boolean",
            "description": "Flag to indicate if the reminder should repeat."
          },
          {
            "name": "atDate",
            "type": "String",
            "description": "The date and time when the reminder is scheduled."
          }
        ],
        "actions": [
          {
            "name": "delete",
            "type": "Void",
            "description": "Deletes the specified reminder."
          }
        ],
        "description": "Represents an event reminder with details and configuration."
      }
    ]
  },
  "dependencies": {
    "sms": "sms:",
    "email": "email:"
  }
}